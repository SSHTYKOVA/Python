# Split string method
names_string = input("Give me everybody's names, separated by a comma. ")
names = names_string.split(", ")
# ðŸš¨ Don't change the code above ðŸ‘†
#NOT ALLOWED TO USE CHOICE()
#Write your code below this line ðŸ‘‡
number_of_guests = len(names)

import random
choice_random_number = random.randint(0,number_of_guests-1)
person_who_pays_bill = names[choice_random_number]

print(f"The person who pays the bill is {person_who_pays_bill}")
